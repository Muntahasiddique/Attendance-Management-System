<aside class="fixed left-0 top-0 h-full w-64 bg-card border-r border-border p-4 flex flex-col">
    <!-- Logo -->
    <div class="flex items-center gap-3 mb-8 px-2">
      <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center">
        <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
      </div>
      <div>
        <h1 class="font-bold text-foreground">AMC</h1>
        <p class="text-xs text-muted">Admin Console</p>
      </div>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 space-y-1">
      <a href="/dashboard" class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= active === 'dashboard' ? 'bg-primary/10 text-primary font-medium' : 'text-muted hover:text-foreground hover:bg-card transition-colors' %>">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
        </svg>
        Dashboard
      </a>
      <a href="/enrollment" class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= active === 'enrollment' ? 'bg-primary/10 text-primary font-medium' : 'text-muted hover:text-foreground hover:bg-card transition-colors' %>">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
        </svg>
        Enrollment
      </a>
      <a href="/reports" class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= active === 'reports' ? 'bg-primary/10 text-primary font-medium' : 'text-muted hover:text-foreground hover:bg-card transition-colors' %>">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Reports
      </a>
      <a href="/terminal" class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= active === 'terminal' ? 'bg-primary/10 text-primary font-medium' : 'text-muted hover:text-foreground hover:bg-card transition-colors' %>">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
        </svg>
        Live Terminal
      </a>
      <a href="/settings" class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= active === 'settings' ? 'bg-primary/10 text-primary font-medium' : 'text-muted hover:text-foreground hover:bg-card transition-colors' %>">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Settings
      </a>
    </nav>

    <!-- User -->
    <div class="border-t border-border pt-4 mt-4">
      <div class="flex items-center gap-3 px-2">
        <div class="w-9 h-9 rounded-full bg-primary/20 flex items-center justify-center text-primary font-semibold">
          <%= user ? user.fullName.charAt(0).toUpperCase() : 'A' %>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-foreground truncate"><%= user ? user.fullName : 'Admin User' %></p>
          <p class="text-xs text-muted truncate"><%= user ? user.email : 'admin@company.com' %></p>
        </div>
        <a href="/logout" class="text-muted hover:text-foreground" title="Logout">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
        </a>
      </div>
    </div>
  </aside>