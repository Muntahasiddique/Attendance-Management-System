<!DOCTYPE html>
<html lang="en">
  <%- include("./includes/head.ejs", { title: "Enrollment" }) %>
</head>
<body class="bg-background min-h-screen">
  <!-- Sidebar (same as dashboard) -->
  <%- include("./includes/sidebar.ejs") %>

  <!-- Main Content -->
  <main class="ml-64 p-8">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-foreground">Enrollment Console</h1>
      <p class="text-muted mt-1">Register new users and capture biometric data</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Registration Form -->
      <div class="bg-card border border-border rounded-xl p-6">
        <h3 class="font-semibold text-foreground mb-6 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Student Information
        </h3>
        <form id="enrollmentForm" class="space-y-5">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-foreground mb-2">First Name</label>
              <input type="text" placeholder="John" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
            </div>
            <div>
              <label class="block text-sm font-medium text-foreground mb-2">Last Name</label>
              <input type="text" placeholder="Doe" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Student ID</label>
            <input type="text" placeholder="EMP-2024-001" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
          </div>


          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Department</label>
            <select class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
              <option value="">Select Class</option>
               <option value="BSCS5">BSCS5</option>
              <option value="BSCS4">BSCS4</option>
              <option value="BSCS6">BSCS6</option>
              <option value="BSCS7">BSCS7</option>
              <option value="BSCS8">BSCS8</option>
             
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Role</label>
            <select class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
              <option value="Student">Student</option>
              <option value="Teacher">Teacher</option>
              <option value="Staff">Staff</option>
              <option value="Administrator">Administrator</option>
            </select>
          </div>
        </form>
      </div>

      <!-- Camera Capture -->
      <div class="bg-card border border-border rounded-xl p-6">
        <h3 class="font-semibold text-foreground mb-6 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Biometric Capture
        </h3>

        <!-- Camera Preview -->
        <div class="relative bg-background rounded-xl overflow-hidden mb-6 aspect-video">
          <video id="cameraPreview" class="w-full h-full object-cover" autoplay muted playsinline></video>
          
          <!-- Face Guide Overlay -->
          <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
            <div id="faceGuide" class="w-48 h-60 border-2 border-dashed border-primary/50 rounded-[100px] capture-ring"></div>
          </div>

          <!-- Camera Off State -->
          <div id="cameraOff" class="absolute inset-0 flex flex-col items-center justify-center bg-background">
            <svg class="w-16 h-16 text-muted mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            <p class="text-muted">Camera not activated</p>
          </div>
        </div>

        <!-- Capture Progress -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-muted">Samples Captured</span>
            <span class="text-sm font-medium text-foreground"><span id="sampleCount">0</span> / 5</span>
          </div>
          <div class="h-2 bg-background rounded-full overflow-hidden">
            <div id="captureProgress" class="h-full bg-primary rounded-full transition-all duration-300" style="width: 0%"></div>
          </div>
        </div>

        <!-- Captured Samples Preview -->
        <div class="grid grid-cols-5 gap-2 mb-6">
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center" id="sample1">
            <span class="text-xs text-muted">1</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center" id="sample2">
            <span class="text-xs text-muted">2</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center" id="sample3">
            <span class="text-xs text-muted">3</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center" id="sample4">
            <span class="text-xs text-muted">4</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center" id="sample5">
            <span class="text-xs text-muted">5</span>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-3">
          <button onclick="startCamera()" id="startCameraBtn" class="flex-1 py-3 px-4 bg-primary text-background font-semibold rounded-lg hover:bg-primary/90 transition-all flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            Start Camera
          </button>
          <button onclick="captureSample()" id="captureBtn" disabled class="flex-1 py-3 px-4 bg-card border border-border text-muted font-semibold rounded-lg transition-all flex items-center justify-center gap-2 cursor-not-allowed">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
            </svg>
            Capture
          </button>
        </div>
      </div>
    </div>

    <!-- Submit Section -->
    <div class="mt-8 bg-card border border-border rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="font-semibold text-foreground">Complete Enrollment</h3>
          <p class="text-sm text-muted mt-1">All fields required. Face encodings will be generated automatically.</p>
        </div>
        <div class="flex gap-3">
          <button class="py-3 px-6 bg-background border border-border text-foreground font-semibold rounded-lg hover:bg-card transition-all">
            Cancel
          </button>
          <button id="submitBtn" disabled class="py-3 px-6 bg-primary text-background font-semibold rounded-lg hover:bg-primary/90 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Enroll User
          </button>
        </div>
      </div>
    </div>
  </main>

  <script>
    let stream = null;
    let sampleCount = 0;

    async function startCamera() {
      try {
        stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: 'user' } });
        document.getElementById('cameraPreview').srcObject = stream;
        document.getElementById('cameraOff').style.display = 'none';
        document.getElementById('captureBtn').disabled = false;
        document.getElementById('captureBtn').classList.remove('cursor-not-allowed', 'text-muted');
        document.getElementById('captureBtn').classList.add('text-foreground', 'hover:bg-card');
        document.getElementById('startCameraBtn').textContent = 'Camera Active';
        document.getElementById('startCameraBtn').disabled = true;
      } catch (err) {
        alert('Unable to access camera. Please check permissions.');
      }
    }

    function captureSample() {
      if (sampleCount >= 5) return;
      
      sampleCount++;
      document.getElementById('sampleCount').textContent = sampleCount;
      document.getElementById('captureProgress').style.width = (sampleCount * 20) + '%';
      
      // Simulate captured sample
      const sampleDiv = document.getElementById('sample' + sampleCount);
      sampleDiv.innerHTML = '<svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
      sampleDiv.classList.add('border-primary', 'bg-primary/10');
      
      if (sampleCount >= 5) {
        document.getElementById('submitBtn').disabled = false;
        document.getElementById('captureBtn').disabled = true;
        document.getElementById('faceGuide').classList.remove('border-primary/50');
        document.getElementById('faceGuide').classList.add('border-primary');
      }
    }
  </script>
</body>
</html>
