<!DOCTYPE html>
<html lang="en">
  <%- include("./includes/head.ejs", { title: "Enrollment" }) %>
</head>
<body class="bg-background min-h-screen">
  <!-- Sidebar (same as dashboard) -->
  <%- include("./includes/sidebar.ejs", {active: "enrollment"}) %>

  <!-- Main Content -->
  <main class="ml-64 p-8">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-foreground">Enrollment Console</h1>
      <p class="text-muted mt-1">Register new users and capture biometric data</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Registration Form -->
      <div class="bg-card border border-border rounded-xl p-6">
        <h3 class="font-semibold text-foreground mb-6 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Student Information
        </h3>
        <form id="enrollmentForm" class="space-y-5">
          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Username</label>
            <input type="text" name="username" required placeholder="e.g., john_doe" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Full Name</label>
            <input type="text" name="fullName" required placeholder="e.g., John Doe" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Roll Number</label>
            <input type="text" name="rollNo" required placeholder="e.g., BSCS-21-001" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Email</label>
            <input type="email" name="email" required placeholder="e.g., john@example.com" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Password</label>
            <div class="relative">
              <input type="password" id="studentPassword" name="password" required placeholder="Enter password" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
              <button type="button" onclick="togglePasswordVisibility()" class="absolute right-3 top-1/2 -translate-y-1/2 text-muted hover:text-foreground">
                <svg id="eyeIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <svg id="eyeSlashIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                </svg>
              </button>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-foreground mb-2">Assign to Class</label>
            <select name="classRef" required id="classSelect" class="w-full px-4 py-3 bg-background border border-border rounded-lg text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
              <option value="">Select Class</option>
            </select>
          </div>
        </form>
      </div>

      <!-- Camera Capture -->
      <div class="bg-card border border-border rounded-xl p-6">
        <h3 class="font-semibold text-foreground mb-6 flex items-center gap-2">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Biometric Capture
        </h3>

        <!-- Camera Preview -->
        <div class="relative bg-background rounded-xl overflow-hidden mb-6 aspect-video">
          <video id="cameraPreview" class="w-full h-full object-cover hidden" autoplay muted playsinline></video>
          <img id="ipCameraPreview" class="w-full h-full object-cover hidden" />
          
          <!-- Face Guide Overlay -->
          <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
            <div id="faceGuide" class="w-48 h-60 border-2 border-dashed border-primary/50 rounded-[100px] capture-ring"></div>
          </div>

          <!-- Camera Off State -->
          <div id="cameraOff" class="absolute inset-0 flex flex-col items-center justify-center bg-background">
            <svg class="w-16 h-16 text-muted mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            <p class="text-muted">Camera not activated</p>
          </div>
        </div>

        <!-- Capture Progress -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm text-muted">Samples Captured</span>
            <span class="text-sm font-medium text-foreground"><span id="sampleCount">0</span> / 5</span>
          </div>
          <div class="h-2 bg-background rounded-full overflow-hidden">
            <div id="captureProgress" class="h-full bg-primary rounded-full transition-all duration-300" style="width: 0%"></div>
          </div>
        </div>

        <!-- Captured Samples Preview -->
        <div class="grid grid-cols-5 gap-2 mb-6">
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center relative group" id="sample1" data-index="1">
            <span class="text-xs text-muted">1</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center relative group" id="sample2" data-index="2">
            <span class="text-xs text-muted">2</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center relative group" id="sample3" data-index="3">
            <span class="text-xs text-muted">3</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center relative group" id="sample4" data-index="4">
            <span class="text-xs text-muted">4</span>
          </div>
          <div class="aspect-square bg-background rounded-lg border border-border flex items-center justify-center relative group" id="sample5" data-index="5">
            <span class="text-xs text-muted">5</span>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <div class="flex gap-3">
            <button onclick="startCamera()" id="startCameraBtn" class="flex-1 py-3 px-4 bg-primary text-background font-semibold rounded-lg hover:bg-primary/90 transition-all flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              Start Camera
            </button>
            <button onclick="stopCamera()" id="stopCameraBtn" disabled class="hidden flex-1 py-3 px-4 bg-danger text-white font-semibold rounded-lg hover:bg-danger/90 transition-all items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 10a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z"/>
              </svg>
              Stop Camera
            </button>
            <button onclick="captureSample()" id="captureBtn" disabled class="flex-1 py-3 px-4 bg-card border border-border text-muted font-semibold rounded-lg transition-all flex items-center justify-center gap-2 cursor-not-allowed">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
              </svg>
              Capture
            </button>
          </div>
          
          <div class="text-center text-muted">or</div>
          
          <div>
            <input type="file" id="imageUpload" accept="image/*" multiple class="hidden">
            <button onclick="document.getElementById('imageUpload').click()" class="w-full py-3 px-4 bg-card border-2 border-dashed border-border text-foreground font-semibold rounded-lg hover:border-primary hover:bg-primary/5 transition-all flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Upload Images (Max 5)
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Submit Section -->
    <div class="mt-8 bg-card border border-border rounded-xl p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="font-semibold text-foreground">Complete Enrollment</h3>
          <p class="text-sm text-muted mt-1">All fields required. Face encodings will be generated automatically.</p>
        </div>
        <div class="flex gap-3">
          <button class="py-3 px-6 bg-background border border-border text-foreground font-semibold rounded-lg hover:bg-card transition-all">
            Cancel
          </button>
          <button id="submitBtn" disabled class="py-3 px-6 bg-primary text-background font-semibold rounded-lg hover:bg-primary/90 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Enroll User
          </button>
        </div>
      </div>
  <script>
    let stream = null;
    let sampleCount = 0;
    let capturedDescriptors = [];
    let capturedImages = []; // Store captured/uploaded images as blobs
    let imageIndexMap = {}; // Maps sample index to capturedImages array index
    let isUsingIPCamera = false;

    function deleteImage(sampleIndex) {
      // Get the image index in capturedImages array
      const imageIndex = imageIndexMap[sampleIndex];
      
      // Remove the image from array
      if (imageIndex !== undefined) {
        capturedImages.splice(imageIndex, 1);
      }
      
      // Rebuild the display from scratch
      // First, reset all sample divs
      for (let i = 1; i <= 5; i++) {
        const div = document.getElementById('sample' + i);
        div.innerHTML = `<span class="text-xs text-muted">${i}</span>`;
        div.classList.remove('border-primary', 'bg-primary/10');
      }
      
      // Clear the mapping
      imageIndexMap = {};
      
      // Decrease sample count
      sampleCount--;
      document.getElementById('sampleCount').textContent = sampleCount;
      document.getElementById('captureProgress').style.width = (sampleCount * 20) + '%';
      
      // Redisplay all remaining images in order
      capturedImages.forEach((file, index) => {
        const displayIndex = index + 1;
        imageIndexMap[displayIndex] = index;
        
        const sampleDiv = document.getElementById('sample' + displayIndex);
        
        // Read and display the image
        const reader = new FileReader();
        reader.onload = (e) => {
          sampleDiv.innerHTML = `
            <img src="${e.target.result}" class="w-full h-full object-cover rounded-lg">
            <button onclick="deleteImage(${displayIndex})" class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
          `;
          sampleDiv.classList.add('border-primary', 'bg-primary/10');
        };
        reader.readAsDataURL(file);
      });
      
      // Re-enable controls if samples < 5
      if (sampleCount < 5) {
        document.getElementById('submitBtn').disabled = true;
        if (!stream) {
          document.getElementById('captureBtn').disabled = false;
          document.getElementById('imageUpload').disabled = false;
          document.getElementById('startCameraBtn').disabled = false;
          document.getElementById('startCameraBtn').textContent = 'Start Camera';
        } else {
          document.getElementById('captureBtn').disabled = false;
        }
      }
    }

    async function loadClasses() {
      try {
        const response = await fetch('/admin/api/classes');
        const classes = await response.json();
        const classSelect = document.getElementById('classSelect');
        const options = classes.map(c => `<option value="${c._id}">${c.name} ${c.semester} - ${c.section}</option>`).join('');
        classSelect.innerHTML = '<option value="">Select Class</option>' + options;
      } catch (error) {
        console.error('Error loading classes:', error);
      }
    }

    function togglePasswordVisibility() {
      const input = document.getElementById('studentPassword');
      const eyeIcon = document.getElementById('eyeIcon');
      const eyeSlashIcon = document.getElementById('eyeSlashIcon');
      
      if (input.type === 'password') {
        input.type = 'text';
        eyeIcon.classList.add('hidden');
        eyeSlashIcon.classList.remove('hidden');
      } else {
        input.type = 'password';
        eyeIcon.classList.remove('hidden');
        eyeSlashIcon.classList.add('hidden');
      }
    }

    // Handle image upload
    document.getElementById('imageUpload').addEventListener('change', async (e) => {
      const files = Array.from(e.target.files).slice(0, 5 - sampleCount);
      
      if (files.length === 0) return;
      
      for (let i = 0; i < files.length && sampleCount < 5; i++) {
        const file = files[i];
        const reader = new FileReader();
        
        reader.onload = async (event) => {
          const img = new Image();
          img.onload = () => {
            sampleCount++;
            capturedImages.push(file); // Store the file
            imageIndexMap[sampleCount] = capturedImages.length - 1;
            
            document.getElementById('sampleCount').textContent = sampleCount;
            document.getElementById('captureProgress').style.width = (sampleCount * 20) + '%';
            
            // Display uploaded image in sample slot with delete button
            const sampleDiv = document.getElementById('sample' + sampleCount);
            sampleDiv.innerHTML = `
              <img src="${event.target.result}" class="w-full h-full object-cover rounded-lg">
              <button onclick="deleteImage(${sampleCount})" class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              </button>
            `;
            sampleDiv.classList.add('border-primary', 'bg-primary/10');
            
            if (sampleCount >= 5) {
              document.getElementById('submitBtn').disabled = false;
              document.getElementById('captureBtn').disabled = true;
              document.getElementById('imageUpload').disabled = true;
              document.getElementById('startCameraBtn').disabled = true;
              document.getElementById('faceGuide').classList.remove('border-primary/50');
              document.getElementById('faceGuide').classList.add('border-primary');
            }
          };
          img.src = event.target.result;
        };
        
        reader.readAsDataURL(file);
      }
      
      // Reset file input
      e.target.value = '';
    });

    async function startCamera() {
      try {
        // Fetch camera settings from server
        const settingsRes = await fetch('/api/camera/stream-url');
        const cameraSettings = await settingsRes.json();
        
        const video = document.getElementById('cameraPreview');
        const ipImg = document.getElementById('ipCameraPreview');
        const cameraOffDiv = document.getElementById('cameraOff');
        
        if (cameraSettings.cameraType === 'ip' && cameraSettings.streamUrl) {
          // Use IP camera via MJPEG HTTP stream (simple like Python cv2)
          isUsingIPCamera = true;
          
          // Hide video element and show img
          video.style.display = 'none';
          ipImg.style.display = 'block';
          ipImg.src = '/api/camera/stream';
          
          cameraOffDiv.style.display = 'none';
          
          console.log('IP camera connected via MJPEG stream');
        } else {
          // Use built-in webcam
          isUsingIPCamera = false;
          stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: 'user' } });
          video.srcObject = stream;
          video.style.display = 'block';
          ipImg.style.display = 'none';
          
          cameraOffDiv.style.display = 'none';
        }
        
        document.getElementById('captureBtn').disabled = false;
        document.getElementById('captureBtn').classList.remove('cursor-not-allowed', 'text-muted');
        document.getElementById('captureBtn').classList.add('text-foreground', 'hover:bg-card');
        document.getElementById('startCameraBtn').textContent = 'Camera Active';
        document.getElementById('startCameraBtn').disabled = true;
        document.getElementById('startCameraBtn').classList.add('hidden');
        document.getElementById('stopCameraBtn').disabled = false;
        document.getElementById('stopCameraBtn').classList.remove('hidden');
        document.getElementById('stopCameraBtn').classList.add('flex');
      } catch (err) {
        console.error('Camera error:', err);
        alert('Unable to access camera: ' + err.message);
      }
    }
    
    function stopCamera() {
      // Stop webcam stream
      if (stream) {
        stream.getTracks().forEach(track => track.stop());
        stream = null;
      }
      
      // Stop IP camera
      if (isUsingIPCamera) {
        const ipImg = document.getElementById('ipCameraPreview');
        ipImg.src = '';
        ipImg.style.display = 'none';
        isUsingIPCamera = false;
      }
      
      // Reset video element
      const video = document.getElementById('cameraPreview');
      video.srcObject = null;
      video.style.display = 'block';
      
      // Show camera off state
      document.getElementById('cameraOff').style.display = 'flex';
      
      // Reset buttons
      document.getElementById('captureBtn').disabled = true;
      document.getElementById('captureBtn').classList.add('cursor-not-allowed', 'text-muted');
      document.getElementById('captureBtn').classList.remove('text-foreground', 'hover:bg-card');
      document.getElementById('startCameraBtn').textContent = 'Start Camera';
      document.getElementById('startCameraBtn').disabled = false;
      document.getElementById('startCameraBtn').classList.remove('hidden');
      document.getElementById('stopCameraBtn').disabled = true;
      document.getElementById('stopCameraBtn').classList.add('hidden');
      document.getElementById('stopCameraBtn').classList.remove('flex');
    }
    
    function captureSample() {
      if (sampleCount >= 5) return;
      
      const canvas = document.createElement('canvas');
      const ctx = canvas.getContext('2d');
      
      if (isUsingIPCamera) {
        // Capture from IP camera img element (simple!)
        const ipImg = document.getElementById('ipCameraPreview');
        if (!ipImg || !ipImg.complete) {
          alert('IP camera not ready. Please wait a moment and try again.');
          return;
        }
        
        canvas.width = ipImg.naturalWidth || 1280;
        canvas.height = ipImg.naturalHeight || 720;
        
        try {
          ctx.drawImage(ipImg, 0, 0, canvas.width, canvas.height);
        } catch (e) {
          alert('Failed to capture image. Please try again.');
          return;
        }
      } else {
        // Capture from video element
        const video = document.getElementById('cameraPreview');
        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;
        ctx.drawImage(video, 0, 0);
      }
      
      // Convert canvas to blob and store
      canvas.toBlob((blob) => {
        const file = new File([blob], `capture-${Date.now()}.jpg`, { type: 'image/jpeg' });
        capturedImages.push(file);
        
        sampleCount++;
        imageIndexMap[sampleCount] = capturedImages.length - 1;
        document.getElementById('sampleCount').textContent = sampleCount;
        document.getElementById('captureProgress').style.width = (sampleCount * 20) + '%';
        
        const sampleDiv = document.getElementById('sample' + sampleCount);
        const imgUrl = canvas.toDataURL();
        sampleDiv.innerHTML = `
          <img src="${imgUrl}" class="w-full h-full object-cover rounded-lg">
          <button onclick="deleteImage(${sampleCount})" class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          </button>
        `;
        sampleDiv.classList.add('border-primary', 'bg-primary/10');
        
        if (sampleCount >= 5) {
          document.getElementById('submitBtn').disabled = false;
          document.getElementById('captureBtn').disabled = true;
          document.getElementById('imageUpload').disabled = true;
          document.getElementById('startCameraBtn').disabled = true;
          document.getElementById('faceGuide').classList.remove('border-primary/50');
          document.getElementById('faceGuide').classList.add('border-primary');
          
          // Stop camera
          if (stream) {
            stream.getTracks().forEach(track => track.stop());
          }
        }
      }, 'image/jpeg', 0.95);
    }

    document.getElementById('submitBtn').addEventListener('click', async () => {
      const form = document.getElementById('enrollmentForm');
      const formData = new FormData(form);
      
      // Validate all fields
      const username = formData.get('username');
      const fullName = formData.get('fullName');
      const rollNo = formData.get('rollNo');
      const email = formData.get('email');
      const password = formData.get('password');
      const classRef = formData.get('classRef');
      
      if (!username || !fullName || !rollNo || !email || !password || !classRef) {
        alert('Please fill all fields');
        return;
      }
      
      if (sampleCount < 5) {
        alert('Please capture or upload at least 5 face samples');
        return;
      }
      
      // Create new FormData for submission
      const submitData = new FormData();
      submitData.append('username', username);
      submitData.append('fullName', fullName);
      submitData.append('rollNo', rollNo);
      submitData.append('email', email);
      submitData.append('password', password);
      submitData.append('classRef', classRef);
      
      // Append all captured/uploaded images (filter out deleted ones)
      capturedImages.forEach((file, index) => {
        if (file) {
          submitData.append('images', file);
        }
      });
      
      try {
        document.getElementById('submitBtn').disabled = true;
        document.getElementById('submitBtn').innerHTML = '<svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Processing...';
        
        const response = await fetch('/api/enroll', {
          method: 'POST',
          body: submitData
        });
        
        const result = await response.json();
        
        if (response.ok) {
          alert(`Student enrolled successfully! ${result.samplesProcessed} face samples processed and averaged into a single descriptor.`);
          window.location.reload();
        } else {
          alert('Error: ' + result.error);
          document.getElementById('submitBtn').disabled = false;
          document.getElementById('submitBtn').innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> Enroll User';
        }
      } catch (error) {
        alert('Error enrolling student: ' + error.message);
        document.getElementById('submitBtn').disabled = false;
        document.getElementById('submitBtn').innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> Enroll User';
      }
    });

    loadClasses();
  </script>
